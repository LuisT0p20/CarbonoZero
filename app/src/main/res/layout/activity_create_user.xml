<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_shape"
    android:orientation="vertical"
    tools:context=".CreateUser">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="#18362F"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="30dp"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="CarbonoZero"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            app:cardCornerRadius="30dp"
            android:layout_height="98dp">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="35dp"
        android:text="Registrar Usuario" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:text="Nombres" />
        <EditText
            android:layout_marginLeft="20dp"
            android:layout_width="255dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:hint="Ingresa nombres"
            android:background="@drawable/rounded_corners"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:text="Apellidos" />
        <EditText
            android:layout_marginLeft="20dp"
            android:layout_width="255dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:hint="Ingresa apellidos"
            android:background="@drawable/rounded_corners"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:text="Teléfono " />
        <EditText
            android:layout_marginLeft="20dp"
            android:layout_width="255dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:hint="Ingresa teléfono"
            android:background="@drawable/rounded_corners"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:text="Usuario   " />
        <EditText
            android:layout_marginLeft="20dp"
            android:layout_width="255dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:hint="Ingresa usuario"
            android:background="@drawable/rounded_corners"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:text="Contraseña" />
        <EditText
            android:layout_marginLeft="27dp"
            android:layout_width="225dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:hint="Ingresa contraseña"
            android:background="@drawable/rounded_corners"></EditText>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="14dp"
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textSize="23dp"
                android:textColor="@color/white"
                android:text="Confirmar    " />
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textSize="23dp"
                android:textColor="@color/white"
                android:text="contraseña" />

        </LinearLayout>
        <EditText
            android:layout_marginLeft="25dp"
            android:layout_width="225dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:hint="Ingresa contraseña"
            android:background="@drawable/rounded_corners"></EditText>
    </LinearLayout>
    <Button
        android:id="@+id/btn_create_user"
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:text="Registrar"
        android:backgroundTint="@color/button"
        ></Button>
    <Button
        android:id="@+id/btn_cancel_create_user"
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:text="Cancelar"
        android:backgroundTint="@color/button"
        ></Button>

</LinearLayout>
